'use strict'

const path = require('path')
const {APP_DOMAIN: domain, NGINX_PUBLISHED_PORT: port} = require('@self/Local')

module.exports = [
  domain,
  ['www', domain].join('.')
].map((domain) => ({
  force: true,
  mode: '444',
  path: `${domain}`,
  data: {
    domain,
    port,
    webroot: path.resolve(__dirname, '../webroot')
  }
}))

if (!module.parent) {
  require('coz').render(__filename)
}