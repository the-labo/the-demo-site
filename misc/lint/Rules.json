{
  "client/!(shim)/**/+(*.js|*.jsx)": {
    "contentRule": {
      "endsWithNewLine": true,
      "maxLines": 200
    }
  },
  "client/scenes/!(index).js": {
    "callRule": {
      "keypathArguments": {
        "bindScope": "client/scopes"
      }
    },
    "decorateRule": {
      "declared": true
    },
    "filenameRule": {
      "endsWith": "Scene.js"
    }
  },
  "client/ui/**/*.jsx": {
    "callRule": {
      "keypathArguments": {
        "l": "conf/locales/en"
      }
    },
    "decorateRule": {
      "declared": true
    },
    "depsRule": {
      "importFrom": [
        ".mjs",
        ".js",
        ".jsx",
        ".json",
        ".pcss"
      ],
      "requireFrom": [
        ".js",
        ".json"
      ]
    },
    "propRule": {
      "keypathAccess": {
        "state": "client/store/scopes",
        "Urls": "conf/Urls"
      }
    }
  },
  "client/ui/stateful/admin/**/*.jsx": {
    "filenameRule": {
      "startsWith": "Admin"
    }
  },
  "client/ui/stateful/sign/*.jsx": {
    "filenameRule": {
      "startsWith": "Sign"
    }
  },
  "client/ui/views/**/!(index).jsx": {
    "filenameRule": {
      "endsWith": "View.jsx"
    }
  },
  "client/ui/views/admin/**/*.jsx": {
    "filenameRule": {
      "startsWith": "Admin"
    }
  },
  "conf/Icons.js": {
    "moduleRule": {
      "keyPattern": "/^[A-Z_]+_ICON/",
      "type": "object"
    }
  },
  "conf/Urls.js": {
    "moduleRule": {
      "keyPattern": "/^[A-Z_]+_URL$/",
      "type": "object",
      "valuePattern": "/^//",
      "valueUnique": true
    }
  },
  "server/**/*.js": {
    "contentRule": {
      "endsWithNewLine": true,
      "maxLines": 200
    },
    "depsRule": {
      "importFrom": [
        ".mjs",
        ".js",
        ".json"
      ],
      "requireFrom": [
        ".js",
        ".json"
      ]
    }
  },
  "server/controllers/!(index).js": {
    "filenameRule": {
      "endsWith": "Ctrl.js"
    },
    "moduleRule": {
      "namedFromDefault": true,
      "type": "function"
    }
  },
  "server/db/hooks/!(index).js": {
    "filenameRule": {
      "endsWith": "Hook.js"
    },
    "moduleRule": {
      "namedFromDefault": true,
      "type": "function"
    }
  },
  "server/db/resources/!(index).js": {
    "filenameRule": {
      "endsWith": "Resource.js"
    },
    "moduleRule": {
      "namedFromDefault": true,
      "type": "function"
    }
  },
  "server/db/seeds/**/!(index|_*).js": {
    "filenameRule": {
      "endsWith": ".seed.js"
    }
  },
  "server/endpoints/routes/!(index).js": {
    "filenameRule": {
      "endsWith": "Route.js"
    },
    "moduleRule": {
      "type": "function"
    }
  },
  "server/services/!(index).js": {
    "filenameRule": {
      "endsWith": "Service.js"
    },
    "moduleRule": {
      "namedFromDefault": true,
      "type": "function"
    }
  }
}